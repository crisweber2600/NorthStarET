@model NorthStarET.NextGen.Lms.Web.Models.Districts.CreateDistrictViewModel

@{
    ViewData["Title"] = "Create District";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="display-6">Create New District</h1>
                <a asp-controller="Districts" asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </div>

            <div class="card">
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()
                        
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">District Name</label>
                            <input asp-for="Name" class="form-control" placeholder="Enter district name" required />
                            <span asp-validation-for="Name" class="text-danger"></span>
                            <div class="form-text">The display name for the district (3-100 characters)</div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Suffix" class="form-label">District Suffix</label>
                            <input asp-for="Suffix" class="form-control" placeholder="example.edu" required />
                            <span asp-validation-for="Suffix" class="text-danger"></span>
                            <div class="form-text">Email domain suffix (lowercase letters, numbers, dots, and hyphens only)</div>
                        </div>

                        <div class="d-flex justify-content-end gap-2">
                            <a asp-controller="Districts" asp-action="Index" class="btn btn-secondary">Cancel</a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Create District
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="alert alert-info mt-4" role="alert">
                <i class="bi bi-info-circle"></i>
                <strong>Note:</strong> The district suffix must be unique and will be used to validate admin email addresses.
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
