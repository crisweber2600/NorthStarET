@model NorthStarET.NextGen.Lms.Web.Models.Districts.EditDistrictViewModel

@{
    ViewData["Title"] = "Edit District";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="display-6">Edit District</h1>
                <a asp-controller="Districts" asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </div>

            <div class="card">
                <div class="card-body">
                    <form asp-action="Edit" asp-route-id="@Model.Id" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">District Name</label>
                            <input asp-for="Name" class="form-control" required />
                            <span asp-validation-for="Name" class="text-danger"></span>
                            <div class="form-text">The display name for the district (3-100 characters)</div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Suffix" class="form-label">District Suffix</label>
                            <input asp-for="Suffix" class="form-control" readonly />
                            <div class="form-text text-muted">
                                <i class="bi bi-lock"></i> The suffix cannot be changed after creation
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-2">
                            <a asp-controller="Districts" asp-action="Index" class="btn btn-secondary">Cancel</a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
