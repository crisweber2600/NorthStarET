@model NorthStarET.NextGen.Lms.Web.Models.DistrictAdmins.ManageDistrictAdminsViewModel

@{
    ViewData["Title"] = "Manage District Admins";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="display-6">Manage District Admins</h1>
            <p class="text-muted">@Model.DistrictName - Invite and manage district administrators</p>
        </div>
        <div class="col-md-4 text-end">
            <a asp-controller="Districts" asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to Districts
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Invite Form Card - Figma 24-181 -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">
                <i class="bi bi-person-plus"></i> Invite New Admin
            </h5>
        </div>
        <div class="card-body">
            <form asp-action="Invite" method="post" asp-antiforgery="true">
                <input type="hidden" name="DistrictId" value="@Model.DistrictId" />
                
                <div class="row g-3">
                    <!-- First Name - Figma 24-285 -->
                    <div class="col-md-4">
                        <label for="FirstName" class="form-label">First Name</label>
                        <input type="text" 
                               class="form-control" 
                               id="FirstName" 
                               name="FirstName" 
                               required 
                               maxlength="100"
                               placeholder="Enter first name">
                    </div>
                    
                    <!-- Last Name - Figma 24-282 -->
                    <div class="col-md-4">
                        <label for="LastName" class="form-label">Last Name</label>
                        <input type="text" 
                               class="form-control" 
                               id="LastName" 
                               name="LastName" 
                               required 
                               maxlength="100"
                               placeholder="Enter last name">
                    </div>
                    
                    <!-- Email - Figma 24-288 -->
                    <div class="col-md-4">
                        <label for="Email" class="form-label">Email</label>
                        <input type="email" 
                               class="form-control" 
                               id="Email" 
                               name="Email" 
                               required 
                               maxlength="255"
                               placeholder="admin@example.edu">
                        <div class="form-text">Email must match district suffix</div>
                    </div>
                </div>
                
                <!-- Send Invitation Button - Figma 24-314 -->
                <div class="mt-3">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-envelope"></i> Send Invitation
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Admin List Card -->
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">
                <i class="bi bi-people"></i> District Admins (@Model.Admins.Count)
            </h5>
        </div>
        <div class="card-body">
            @if (Model.Admins.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Status</th>
                                <th>Invited At</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var admin in Model.Admins)
                            {
                                <tr data-admin-id="@admin.Id"
                                    data-admin-email="@admin.Email"
                                    data-admin-status="@admin.Status"
                                    data-invited-utc='@admin.InvitedAtUtc.ToString("O")'>
                                    <td><strong>@admin.Email</strong></td>
                                    <td>@admin.Email</td>
                                    <td>
                                        @if (admin.Status == "Verified")
                                        {
                                            <!-- Verified Badge - Figma 24-403 -->
                                            <span class="badge bg-success">
                                                <i class="bi bi-check-circle"></i> Verified
                                            </span>
                                        }
                                        else if (admin.Status == "Unverified")
                                        {
                                            <!-- Unverified Badge - Figma 24-410 -->
                                            <span class="badge bg-warning text-dark">
                                                <i class="bi bi-hourglass-split"></i> Unverified
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@admin.Status</span>
                                        }
                                    </td>
                                    <td>@admin.InvitedAtUtc.ToString("MMM dd, yyyy HH:mm")</td>
                                    <td class="text-end">
                                        <div class="btn-group btn-group-sm" role="group">
                                            @if (admin.Status == "Unverified")
                                            {
                                                <!-- Resend Button - Figma 340-96 - Only for Unverified -->
                                                <button type="button" 
                                                        class="btn btn-outline-primary" 
                                                        data-bs-toggle="modal" 
                                                        data-bs-target="#resendModal@(admin.Id)">
                                                    <i class="bi bi-arrow-repeat"></i> Resend
                                                </button>
                                            }
                                            
                                            <!-- Remove Button - Figma 340-99 - Available for all -->
                                            <button type="button" 
                                                    class="btn btn-outline-danger" 
                                                    data-bs-toggle="modal" 
                                                    data-bs-target="#removeModal@(admin.Id)">
                                                <i class="bi bi-trash"></i> Remove
                                            </button>
                                        </div>
                                    </td>
                                </tr>

                                <!-- Resend Confirmation Modal -->
                                <div class="modal fade" id="resendModal@(admin.Id)" tabindex="-1" aria-labelledby="resendModalLabel@(admin.Id)" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="resendModalLabel@(admin.Id)">Resend Invitation</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                <p>Resend invitation to <strong>@admin.Email</strong>?</p>
                                                <p class="text-muted small mb-0">This will send a new invitation email and extend the expiration date.</p>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                <form asp-action="Resend" method="post" asp-antiforgery="true" class="d-inline">
                                                    <input type="hidden" name="districtId" value="@Model.DistrictId" />
                                                    <input type="hidden" name="adminId" value="@admin.Id" />
                                                    <button type="submit" class="btn btn-primary">Confirm</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Remove Confirmation Modal -->
                                <div class="modal fade" id="removeModal@(admin.Id)" tabindex="-1" aria-labelledby="removeModalLabel@(admin.Id)" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="removeModalLabel@(admin.Id)">Remove Admin</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                <div class="alert alert-danger" role="alert">
                                                    <i class="bi bi-exclamation-triangle-fill"></i>
                                                    <strong>Warning:</strong> This action cannot be undone.
                                                </div>
                                                <p>Remove <strong>@admin.Email</strong> from district admins?</p>
                                                <p class="text-muted small mb-0">This will immediately revoke access for this administrator.</p>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                <form asp-action="Remove" method="post" asp-antiforgery="true" class="d-inline">
                                                    <input type="hidden" name="districtId" value="@Model.DistrictId" />
                                                    <input type="hidden" name="adminId" value="@admin.Id" />
                                                    <button type="submit" class="btn btn-danger">Confirm Delete</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-person-x display-1 text-muted"></i>
                    <p class="lead mt-3">No district admins found</p>
                    <p class="text-muted">Invite your first district admin to get started</p>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-dismiss alerts after 5 seconds
        setTimeout(function() {
            var alerts = document.querySelectorAll('.alert-dismissible');
            alerts.forEach(function(alert) {
                var bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            });
        }, 5000);
    </script>
}
