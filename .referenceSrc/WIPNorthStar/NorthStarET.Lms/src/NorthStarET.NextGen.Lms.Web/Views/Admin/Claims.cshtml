@model NorthStarET.NextGen.Lms.Web.Models.ClaimsDiagnosticViewModel

@{
    ViewData["Title"] = "Claims Diagnostics";
}

<div class="row">
    <div class="col-12 col-lg-10">
        <h1 class="display-6">Claims Diagnostics</h1>
        <p class="lead">Inspect the authenticated user context and confirm required claims are present.</p>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-4">User</dt>
                    <dd class="col-sm-8">@Model.UserName ?? "(none)"</dd>
                    <dt class="col-sm-4">Authenticated By</dt>
                    <dd class="col-sm-8">@Model.AuthenticationType ?? "(unknown)"</dd>
                    <dt class="col-sm-4">Total Claims</dt>
                    <dd class="col-sm-8">@Model.Claims.Count</dd>
                </dl>
            </div>
        </div>
    </div>
</div>

@if (Model.Claims.Count == 0)
{
    <div class="alert alert-warning" role="alert">
        No claims were found for the current principal. Confirm the user is authenticated and token acquisition succeeded.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th scope="col">Type</th>
                    <th scope="col">Value</th>
                    <th scope="col">Value Type</th>
                    <th scope="col">Issuer</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var claim in Model.Claims)
            {
                <tr>
                    <td>@claim.Type</td>
                    <td class="text-break">@claim.Value</td>
                    <td>@claim.ValueType</td>
                    <td>@claim.Issuer</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
}
