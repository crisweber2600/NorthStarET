{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "YARP Gateway Routes Configuration",
  "description": "API Gateway routing configuration for NorthStar Phase 1 Foundation Services",
  "type": "object",
  "properties": {
    "ReverseProxy": {
      "type": "object",
      "properties": {
        "Routes": {
          "type": "object",
          "properties": {
            "identity-auth-route": {
              "type": "object",
              "description": "Route for authentication endpoints (public)",
              "properties": {
                "ClusterId": { "const": "identity-cluster" },
                "Match": {
                  "type": "object",
                  "properties": {
                    "Path": { "const": "/api/identity/auth/{**catch-all}" }
                  }
                },
                "Transforms": [
                  { "PathPattern": "/api/auth/{**catch-all}" }
                ]
              }
            },
            "identity-users-route": {
              "type": "object",
              "description": "Route for user management endpoints (authenticated)",
              "properties": {
                "ClusterId": { "const": "identity-cluster" },
                "AuthorizationPolicy": { "const": "authenticated" },
                "Match": {
                  "type": "object",
                  "properties": {
                    "Path": { "const": "/api/identity/users/{**catch-all}" }
                  }
                },
                "Transforms": [
                  { "PathPattern": "/api/users/{**catch-all}" }
                ]
              }
            },
            "identity-roles-route": {
              "type": "object",
              "description": "Route for role management endpoints (admin only)",
              "properties": {
                "ClusterId": { "const": "identity-cluster" },
                "AuthorizationPolicy": { "const": "admin-only" },
                "Match": {
                  "type": "object",
                  "properties": {
                    "Path": { "const": "/api/identity/roles/{**catch-all}" }
                  }
                },
                "Transforms": [
                  { "PathPattern": "/api/roles/{**catch-all}" }
                ]
              }
            },
            "configuration-route": {
              "type": "object",
              "description": "Route for configuration service (authenticated)",
              "properties": {
                "ClusterId": { "const": "configuration-cluster" },
                "AuthorizationPolicy": { "const": "authenticated" },
                "Match": {
                  "type": "object",
                  "properties": {
                    "Path": { "const": "/api/configuration/{**catch-all}" }
                  }
                },
                "Transforms": [
                  { "PathPattern": "/api/{**catch-all}" }
                ]
              }
            },
            "legacy-route": {
              "type": "object",
              "description": "Route to legacy OldNorthStar system (Strangler Fig pattern)",
              "properties": {
                "ClusterId": { "const": "legacy-cluster" },
                "AuthorizationPolicy": { "const": "authenticated" },
                "Match": {
                  "type": "object",
                  "properties": {
                    "Path": { "const": "/api/legacy/{**catch-all}" }
                  }
                },
                "Transforms": [
                  { "PathPattern": "/api/{**catch-all}" }
                ]
              }
            }
          }
        },
        "Clusters": {
          "type": "object",
          "properties": {
            "identity-cluster": {
              "type": "object",
              "description": "Identity Service cluster",
              "properties": {
                "Destinations": {
                  "type": "object",
                  "properties": {
                    "identity-primary": {
                      "type": "object",
                      "properties": {
                        "Address": { "const": "http://identity-api:8080" }
                      }
                    }
                  }
                },
                "HealthCheck": {
                  "type": "object",
                  "properties": {
                    "Active": {
                      "type": "object",
                      "properties": {
                        "Enabled": { "const": true },
                        "Interval": { "const": "00:00:10" },
                        "Timeout": { "const": "00:00:05" },
                        "Policy": { "const": "ConsecutiveFailures" },
                        "Path": { "const": "/health" }
                      }
                    },
                    "Passive": {
                      "type": "object",
                      "properties": {
                        "Enabled": { "const": true },
                        "Policy": { "const": "TransportFailureRate" },
                        "ReactivationPeriod": { "const": "00:02:00" }
                      }
                    }
                  }
                }
              }
            },
            "configuration-cluster": {
              "type": "object",
              "description": "Configuration Service cluster",
              "properties": {
                "Destinations": {
                  "type": "object",
                  "properties": {
                    "configuration-primary": {
                      "type": "object",
                      "properties": {
                        "Address": { "const": "http://configuration-api:8080" }
                      }
                    }
                  }
                },
                "HealthCheck": {
                  "type": "object",
                  "properties": {
                    "Active": {
                      "type": "object",
                      "properties": {
                        "Enabled": { "const": true },
                        "Interval": { "const": "00:00:10" },
                        "Timeout": { "const": "00:00:05" },
                        "Policy": { "const": "ConsecutiveFailures" },
                        "Path": { "const": "/health" }
                      }
                    }
                  }
                }
              }
            },
            "legacy-cluster": {
              "type": "object",
              "description": "Legacy OldNorthStar system",
              "properties": {
                "Destinations": {
                  "type": "object",
                  "properties": {
                    "legacy-primary": {
                      "type": "object",
                      "properties": {
                        "Address": { "const": "http://oldnorthstar:5000" }
                      }
                    }
                  }
                },
                "HealthCheck": {
                  "type": "object",
                  "properties": {
                    "Active": {
                      "type": "object",
                      "properties": {
                        "Enabled": { "const": true },
                        "Interval": { "const": "00:00:30" },
                        "Timeout": { "const": "00:00:10" },
                        "Policy": { "const": "ConsecutiveFailures" },
                        "Path": { "const": "/health" }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "examples": [
    {
      "description": "Complete YARP configuration for Phase 1",
      "value": {
        "ReverseProxy": {
          "Routes": {
            "identity-auth-route": {
              "ClusterId": "identity-cluster",
              "Match": {
                "Path": "/api/identity/auth/{**catch-all}"
              },
              "Transforms": [
                { "PathPattern": "/api/auth/{**catch-all}" }
              ]
            },
            "identity-users-route": {
              "ClusterId": "identity-cluster",
              "AuthorizationPolicy": "authenticated",
              "Match": {
                "Path": "/api/identity/users/{**catch-all}"
              },
              "Transforms": [
                { "PathPattern": "/api/users/{**catch-all}" }
              ]
            },
            "identity-roles-route": {
              "ClusterId": "identity-cluster",
              "AuthorizationPolicy": "admin-only",
              "Match": {
                "Path": "/api/identity/roles/{**catch-all}"
              },
              "Transforms": [
                { "PathPattern": "/api/roles/{**catch-all}" }
              ]
            },
            "configuration-route": {
              "ClusterId": "configuration-cluster",
              "AuthorizationPolicy": "authenticated",
              "Match": {
                "Path": "/api/configuration/{**catch-all}"
              },
              "Transforms": [
                { "PathPattern": "/api/{**catch-all}" }
              ]
            },
            "legacy-route": {
              "ClusterId": "legacy-cluster",
              "AuthorizationPolicy": "authenticated",
              "Match": {
                "Path": "/api/legacy/{**catch-all}"
              },
              "Transforms": [
                { "PathPattern": "/api/{**catch-all}" }
              ]
            }
          },
          "Clusters": {
            "identity-cluster": {
              "Destinations": {
                "identity-primary": {
                  "Address": "http://identity-api:8080"
                }
              },
              "HealthCheck": {
                "Active": {
                  "Enabled": true,
                  "Interval": "00:00:10",
                  "Timeout": "00:00:05",
                  "Policy": "ConsecutiveFailures",
                  "Path": "/health"
                },
                "Passive": {
                  "Enabled": true,
                  "Policy": "TransportFailureRate",
                  "ReactivationPeriod": "00:02:00"
                }
              }
            },
            "configuration-cluster": {
              "Destinations": {
                "configuration-primary": {
                  "Address": "http://configuration-api:8080"
                }
              },
              "HealthCheck": {
                "Active": {
                  "Enabled": true,
                  "Interval": "00:00:10",
                  "Timeout": "00:00:05",
                  "Policy": "ConsecutiveFailures",
                  "Path": "/health"
                }
              }
            },
            "legacy-cluster": {
              "Destinations": {
                "legacy-primary": {
                  "Address": "http://oldnorthstar:5000"
                }
              },
              "HealthCheck": {
                "Active": {
                  "Enabled": true,
                  "Interval": "00:00:30",
                  "Timeout": "00:00:10",
                  "Policy": "ConsecutiveFailures",
                  "Path": "/health"
                }
              }
            }
          }
        }
      }
    }
  ]
}
